# Database Configuration
POSTGRES_USER=tiktok
POSTGRES_PASSWORD=tiktok_password_dev
POSTGRES_DB=tiktok_db
POSTGRES_PORT=5432

# Redis Configuration
REDIS_PASSWORD=redis_password_dev
REDIS_PORT=6379

# Application Secrets
SECRET_KEY=dev_secret_key_change_in_production_min_32_chars
JWT_SECRET_KEY=dev_jwt_secret_key_change_in_production_32_chars

# External APIs
SADCAPTCHA_API_KEY=your_sadcaptcha_api_key_here

# Backend Configuration
BACKEND_PORT=8000
DATABASE_URL=postgresql+asyncpg://tiktok:tiktok_password_dev@localhost:5432/tiktok_db

# Celery Configuration
CELERY_BROKER_URL=redis://:redis_password_dev@localhost:6379/0
CELERY_RESULT_BACKEND=redis://:redis_password_dev@localhost:6379/1
WORKER_CONCURRENCY=2

# Frontend Configuration
FRONTEND_PORT=3000
NEXT_PUBLIC_API_URL=http://localhost:8000

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Environment
ENVIRONMENT=development
LOG_LEVEL=debug

# Upload Configuration
MAX_UPLOAD_SIZE=104857600
UPLOAD_DIR=./uploads

# TikTok Configuration
TIKTOK_HEADLESS=true
TIKTOK_UPLOAD_TIMEOUT=300
