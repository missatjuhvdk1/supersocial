# ===========================================
# Root .dockerignore
# Prevents unnecessary files from being sent to Docker daemon
# ===========================================

# Git
.git/
.gitignore
.gitattributes

# Python
__pycache__/
*.py[cod]
*$py.class
*.so
.Python
build/
develop-eggs/
dist/
downloads/
eggs/
.eggs/
lib/
lib64/
parts/
sdist/
var/
wheels/
*.egg-info/
.installed.cfg
*.egg
MANIFEST

# Virtual environments
venv/
env/
ENV/
env.bak/
venv.bak/
.venv/

# Environment files (use runtime env)
.env
.env.local
.env.*.local
.env.production
.env.development
!.env.example

# IDE and editors
.idea/
.vscode/
*.swp
*.swo
*.swn
*~
*.sublime-project
*.sublime-workspace

# OS files
.DS_Store
.AppleDouble
.LSOverride
Thumbs.db
ehthumbs.db
Desktop.ini

# Logs
logs/
*.log
npm-debug.log*
yarn-debug.log*
yarn-error.log*

# Testing
.pytest_cache/
.coverage
htmlcov/
.tox/
.hypothesis/
coverage.xml
*.cover
.nyc_output/

# Database files
*.db
*.sqlite
*.sqlite3
db.sqlite3

# Docker files (prevent recursion)
docker-compose*.yml
Dockerfile*
.docker/

# Documentation
docs/
*.md
!README.md
LICENSE*
CHANGELOG*

# Uploads & Sessions (mounted as volumes)
uploads/
sessions/
temp/
tmp/

# Node.js (frontend)
node_modules/
.next/
out/
.cache/

# CI/CD
.github/
.gitlab-ci.yml
.travis.yml
azure-pipelines.yml

# Secrets (never include)
secrets/
*.pem
*.key
*.crt

# Data directories
data/
backups/
*.sql

# Misc
*.bak
*.tmp
*.orig
.terraform/
