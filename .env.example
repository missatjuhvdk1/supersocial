# Database Configuration
POSTGRES_USER=tiktok
POSTGRES_PASSWORD=your_secure_postgres_password_here
POSTGRES_DB=tiktok_db
POSTGRES_PORT=5432

# Redis Configuration
REDIS_PASSWORD=your_secure_redis_password_here
REDIS_PORT=6379

# Application Secrets
SECRET_KEY=your_secret_key_min_32_characters_long_change_this_in_production
JWT_SECRET_KEY=your_jwt_secret_key_min_32_characters_long_change_this

# External APIs
SADCAPTCHA_API_KEY=your_sadcaptcha_api_key_here

# Backend Configuration
BACKEND_PORT=8000
DATABASE_URL=postgresql://tiktok:your_secure_postgres_password_here@postgres:5432/tiktok_db
REDIS_URL=redis://:your_secure_redis_password_here@redis:6379/0

# Celery Configuration
CELERY_BROKER_URL=redis://:your_secure_redis_password_here@redis:6379/0
CELERY_RESULT_BACKEND=redis://:your_secure_redis_password_here@redis:6379/1
WORKER_CONCURRENCY=4

# Frontend Configuration
FRONTEND_PORT=3000
NEXT_PUBLIC_API_URL=http://localhost:8000

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Environment
ENVIRONMENT=production
LOG_LEVEL=info

# Upload Configuration
MAX_UPLOAD_SIZE=104857600
ALLOWED_VIDEO_FORMATS=mp4,mov,avi,mkv
ALLOWED_IMAGE_FORMATS=jpg,jpeg,png,gif,webp

# TikTok Configuration
TIKTOK_MAX_VIDEO_SIZE=287834931
TIKTOK_MAX_VIDEO_DURATION=600
TIKTOK_SESSION_STORAGE=/app/sessions
TIKTOK_HEADLESS=true
TIKTOK_UPLOAD_TIMEOUT=300

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Session Configuration
SESSION_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=7

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
EMAIL_FROM=noreply@tiktok-autoposter.com

# Monitoring (Optional)
SENTRY_DSN=
SENTRY_ENVIRONMENT=production
SENTRY_TRACES_SAMPLE_RATE=0.1

# Storage (Optional - for S3/Cloud Storage)
USE_S3=false
S3_BUCKET=
S3_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# Proxy Configuration (Optional)
HTTP_PROXY=
HTTPS_PROXY=
NO_PROXY=localhost,127.0.0.1

# Feature Flags
ENABLE_ANALYTICS=true
ENABLE_SCHEDULED_POSTS=true
ENABLE_BULK_UPLOAD=true
ENABLE_VIDEO_PROCESSING=true

# Security
ALLOWED_HOSTS=localhost,127.0.0.1
SECURE_COOKIES=true
COOKIE_SAMESITE=lax
